.focus-feature
  %ul.recent_articles.list_of_links
    - for feature in features
      %li
        %h2= link_to feature.featurable.title, feature.featurable
        %span.date= feature.featurable.published_at.strftime("%a, %B %d, %Y") if feature.featurable.class == Article
        %p= feature.featurable.description.blank? ? truncate(h(feature.featurable.blurb), :length => 100) : truncate(h(feature.featurable.description), :length => 100)
        = clear

- content_for :head do
  %style{:type => "text/css"}
    div.focus-feature { border-top: 1px dotted #A70E13; margin: 0 0 10px; }
    div.focus-feature li { border-bottom: 1px dotted #A70E13; padding: 5px 0 8px; margin: 0; }
    div.focus-feature h2 a { color: #a70e13; font-size: 1.3em; line-height: .9em; }
    div.focus-feature h2 a:hover { color: #DF0D16; }